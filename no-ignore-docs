#!/bin/bash
# docs klasörünü tekrar Git takibine alır

echo "Re-enabling docs/ folder tracking..."

# docs altındaki tüm dosyalar için no-assume-unchanged uygula
find docs -type f -print0 | xargs -0 git update-index --no-assume-unchanged

echo "✅  docs/ klasörü yeniden commit listesine dahil edildi."
